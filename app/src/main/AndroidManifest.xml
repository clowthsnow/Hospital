        android:theme="@style/AppTheme">
        <activity android:name=".LoginView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".AdminView" />
        <activity android:name=".RegistroDocView" />
        <activity android:name=".RegistroEnfView" />
        <activity android:name=".DatosPacienteView" />
        <activity android:name=".PacienteView" />
