<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1F2EB">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewTurno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="5dp"
            android:text="REGISTRAR ENFERMERA"
            android:gravity="center"
            android:textColor="#ffac4207"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="CODIGO:"
                    android:textColor="#154360"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="NOMBRE:"
                    android:textColor="#154360"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="DNI:"
                    android:textColor="#154360"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="TELEFONO"
                    android:textColor="#154360"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="CORREO"
                    android:textColor="#154360"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:text="CONTRASEÃ‘A "
                    android:textColor="#154360"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_weight="1"
                    android:text="TURNO"
                    android:textColor="#154360"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/codigoEnf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="#ffffffff"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/nombreEnf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="#ffffffff"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/dniEnf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="#ffffffff"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/telefonoEnf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="#ffffffff"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/correoEnf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="#ffffffff"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/passEnf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="#ffffffff"
                    android:inputType="textPassword"
                    android:text=""
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/turnoEnfSpiner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:textSize="15sp" />


            </LinearLayout>

        </LinearLayout>



        <Button
            android:id="@+id/button3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="REGISTRAR"
            android:background="#aec8e4"
            android:layout_margin="30dp"
            android:onClick="registrarEnfClick"
            android:textColor="#ffffffff"
            android:layout_gravity="center"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Atras"
            android:background="#909497"
            android:textColor="#ffffffff"
            android:layout_marginTop="1dp"
            android:layout_gravity="right"
            android:onClick="atras"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>